{
  "name": "neostrada-dns",
  "version": "1.0.0",
  "description": "Sets DNS records from Karman Home at neostrada",
  "author": "Simon Karman",
  "license": "ISC",
  "scripts": {
    "enable": "MODE=enable ts-node src/run.ts",
    "disable": "MODE=disable ts-node src/run.ts",
    "test": "jest --silent --verbose test/**.test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "npm run lint && npm test"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "form-data": "^4.0.0",
    "mongodb": "^4.3.1",
    "node-fetch": "^2.6.7"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/node-fetch": "^2.6.1",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jest": "^24.4.2",
    "husky": "4.3.8",
    "jest": "^27.2.1",
    "lint-staged": "^11.1.2",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  },
  "lint-staged": {
    "**/*.ts": [
      "npm run lint:fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged && npm run precommit"
    }
  }
}
